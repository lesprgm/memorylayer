{
  "name": "@handoff/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:unit": "vitest --run src/__tests__/*.test.ts --exclude src/__tests__/api-integration.test.ts",
    "test:integration": "vitest --run src/__tests__/api-integration.test.ts",
    "backfill-embeddings": "npx tsx src/scripts/backfill-embeddings.ts"
  },
  "dependencies": {
    "@memorylayer/chat-capture": "file:../../packages/core/chat-capture",
    "@memorylayer/memory-extraction": "file:../../packages/core/memory-extraction",
    "bcryptjs": "^2.4.3",
    "hono": "^3.11.7",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.9.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "pg-mem": "^3.0.5",
    "typescript": "^5.2.2",
    "vitest": "^1.0.4",
    "wrangler": "^3.19.0"
  }
}
