PORT=3000
API_KEY=ghost-api-key-123
DATABASE_URL=postgres://user:pass@localhost:5432/ghost
DATABASE_API_KEY=supabase-key
GEMINI_API_KEY=ya29.GEMINI_EXAMPLE
# Gemini LLM settings
GEMINI_LLM_MODEL=gemini-2.0-flash-exp
# Example LLM endpoint (set to your provider's REST endpoint)
# e.g. Google Generative API: https://generativelanguage.googleapis.com/v1beta2/models/{model}:generateText
GEMINI_LLM_ENDPOINT=

# Gemini STT settings (daemon)
GEMINI_STT_MODEL=gemini-audio-1a
# Example STT endpoint (set to your provider's REST endpoint)
# e.g. Google Speech-to-Text: https://speech.googleapis.com/v1/speech:recognize
GEMINI_STT_ENDPOINT=

# Embedding Configuration
# ========================
# Choose which embedding model to use:
# - all-MiniLM-L6-v2 (default): Fast, lightweight (~80MB) - Recommended for general use
# - all-mpnet-base-v2: Larger, more accurate (~420MB) - Better semantic understanding
# - paraphrase-multilingual-MiniLM-L12-v2: Supports 50+ languages (~220MB)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Directory to cache downloaded embedding models (default: ./models)
EMBEDDING_CACHE_DIR=./models

# Batch size for bulk embedding operations (default: 32)
EMBEDDING_BATCH_SIZE=32

# Database Configuration
# =======================
# Path to SQLite database file
DATABASE_PATH=./ghost.db
