{
  "name": "@ghost/daemon",
  "version": "0.1.0",
  "description": "Ghost voice-activated AI assistant daemon",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build:ts && electron dist/main.js",
    "build": "tsc -p tsconfig.build.json && npm run copy:overlay && electron-forge make",
    "build:ts": "tsc -p tsconfig.build.json && npm run copy:overlay",
    "copy:overlay": "mkdir -p dist/overlay && cp -r src/overlay/*.html src/overlay/*.css src/overlay/*.js dist/overlay/",
    "package": "electron-forge package",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ghost",
    "ai",
    "voice",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "node-record-lpcm16": "^1.0.1",
    "fast-glob": "^3.3.2",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^28.0.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}